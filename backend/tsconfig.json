{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"outDir": "dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"moduleResolution": "node",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*", "generated/**/*", "types/**/*"],
	"exclude": ["node_modules"]
}
